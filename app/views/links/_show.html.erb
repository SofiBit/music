<%= render 'shared/flash'%>
<div class="clear" onclick="clearContent()"><img src="https://img.icons8.com/material-two-tone/24/000000/delete-sign.png"></div>

<% @result[:links].each do |source, link| %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroupFileAddon01"><%= source %>:</span>
    </div>

    <input type="text" class="form-control" value="<%= link %>" id="<%= source %>" readonly="">

      <div class="input-group-append">
        <button type="button" class="btn btn-outline-secondary" onclick="copy('<%= source %>')"><%= t('input.copy') %></button><br>
      </div>
  </div>
<% end %>

  <div class="info">
    <div class="info-info">
      <p><%= t('result.artist') %>: <%= @track.artist %></p>
      <p><%= t('result.album') %>: <%= @track.album %></p>
      <p><%= t('result.name') %>: <%= @track.name %></p>
      <p><%= t('result.release_date') %>: <%= @track.release_date %></p>
    </div>
    <img src="<%= @track.track_image %>"><br>
  </div>

<%= share_telegram(@track.provider_links) %>
<%= share_email(@track.provider_links) %>

<% if current_user %>
  <div>
    <%= render 'shared/stars', resource: @track %>
    <button type="button" class="btn btn-primary btn-lg" onclick="addTrack(<%= current_user.id %>, <%= @track.id %>)">Add track</button>
    <div><%= t('app.added_track', count: count_adding_track(@track)) %></div>
  </div>
<% end %>
