<div class="ava">
</div>
<div>
  <%= @user.first_name %>
  <%= @user.last_name %>
  <%= @user.email %>
</div>

<%= link_to t('app.playlists'), user_playlists_path(@user) %>
<%= button_to 'open chat', rooms_path(room: { name: "#{user_name(current_user)} - #{user_name(@user)}" }, user: @user) %>

<% unless current_user == @user %>
  <% if current_user.following.include?(@user) %>
    <div id="subscribe_on_user">
      <%= render 'user_subscriptions/create' %>
    </div>
  <% else %>
    <div id="subscribe_on_user">
      <%= render 'user_subscriptions/destroy' %>
    </div>
  <% end %>
<% end %>
