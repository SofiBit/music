<% if @playlist && owner?(current_user, @playlist) %>
  <%= render 'button_make_private' %>
<% end %>

  <div class="info">
    <img src="<%= @track.track_image %>" class="previewImage"><br>
    <div class="info-in-track">
      <p><%= t('result.artist') %>: <%= @track.artist %></p><hr>
      <p><%= t('result.album') %>: <%= @track.album %></p><hr>
      <p><%= t('result.name') %>: <%= @track.name %></p><hr>
      <p><%= t('result.release_date') %>: <%= @track.release_date %></p><hr>
    </div>
  </div>

  <% if current_user %>
    <div class="starsAndButton">
      <%= render 'shared/stars', resource: @track %>
      <button type="button" class="btn btn-secondary btn-lg" onclick="addTrack(<%= current_user.id %>, <%= @track.id %>)">Add track</button>
      <div class="count-user-added-track"><%= t('app.added_track', count: count_adding_track(@track)) %></div>
    </div>
  <% end %>

  <div class="result-links">
    <% JSON.parse(@track.provider_links).each do |source, link| %>
    <div class="row">
      <div class="col-1 service-<%= source %>"><%= image_tag asset_path "#{source}.png" %></div>
      <div class="col-11">
        <div class="input-group mb-3 link-float">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01"><%= source %>:</span>
          </div>

          <input type="text" class="form-control" value="<%= link %>" id="<%= source %>" readonly="">

            <div class="input-group-append">
              <button type="button" class="btn btn-outline-secondary" onclick="copy('<%= source %>')"><%= t('input.copy') %></button><br>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="share-buttons">
    <%= share_telegram(@track.provider_links) %>
    <%= share_email(@track.provider_links) %>
  </div>

  <div class="comments-wr">
    <%= render 'comments' %>
  </div>
