<div id="button-public-private-track">
  <% if private_for_playlist?(@track, @playlist) %>
    <button onclick="revealTrack(<%= track_playlist(@track, @playlist).id %>)">Reveal Track</button>
  <% else %>
    <button onclick="stashTrack(<%= track_playlist(@track, @playlist).id %>)">Stash Track</button>
  <% end %>
</div>

<img src="<%= @track.track_image %>" class="track-image">

<div class="track">
  <% JSON.parse(@track.provider_links).each do |provider, link| %>
    <span><a href="<%= link %>"><%= link %></a></span><br>
  <% end %>

  <div>
    <div>
      <p><%= t('result.artist') %>: <%= @track.artist %></p>
      <p><%= t('result.album') %>: <%= @track.album %></p>
      <p><%= t('result.name') %>: <%= @track.name %></p>
      <p><%= t('result.release_date') %>: <%= @track.release_date %></p><br>
    </div>
  </div>
  
  <%= share_telegram(@track.provider_links) %>
  <%= share_email(@track.provider_links) %>

  <%= render 'shared/stars', resource: @track %>

  <%= link_to t('app.delete_track'), adding_track_to_user_path(current_user.adding_track_to_users.find_by(track: @track)), method: :delete %>

<%= render 'comments' %>
