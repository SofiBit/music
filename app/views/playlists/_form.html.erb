<div class="modal-body" id="modal-body">
  <%= form_with model: @playlist do |form| %>
    <%= form.text_field :title, placeholder: 'Title', class: 'form-control' %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">
          <%= form.file_field :image, class: 'form-control-file', class: "custom-file-input", id: "inputGroupFile01",
            aria_describedby: "inputGroupFileAddon01" %>
          <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
        </div>
      </div>
    <%= form.submit 'Send', class: 'btn btn-primary' %>
  <% end %>
</div>
