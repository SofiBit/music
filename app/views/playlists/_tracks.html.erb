<div class="tracks-list">
  <% tracks(current_user, @playlist).each do |track| %>
      <div class="track-in-playlist">
        <div class="track-wr">
          <%= link_to track_path(track) do %>
            <img class="tracks-playlist" src="<%= track.track_image %>">
            <%= track.artist %> - <%= track.name %><br>
          <% end %>
        </div>
        <div class="btn-group track-options">
          <% if current_user == @playlist.user %>
            <%= link_to t('app.delete_track'), adding_track_path(track.adding_tracks.find_by(playlist: @playlist)), method: :delete, class: 'btn btn-sm btn-outline-secondary' %><br>
            <button class="btn btn-sm btn-outline-secondary" onclick="getPlaylists(<%= current_user.id %>, <%= track.id %>)"><%= t('app.add_track') %></button><br>
          <% else %>
            <button class="btn btn-sm btn-outline-secondary" type="button" onclick="addTrack(<%= current_user.id %>, <%= track.id %>)"><%= t('app.add_track') %></button>
            <div><%= t('app.added_track', count: count_adding_track(track)) %></div>
          <% end %>
          <p><%= t('app.rating_track')%>: <%= average_assessment(track.assessments) %></p>
        </div>
        <hr>
      </div>
  <% end %>
</div>
