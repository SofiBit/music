<div class="chat-message-container">
  <div class="row no-gutters">

    <div class="col">
          <% if current_user_message?(current_user, room_message) %>
            <div class="message-content">
              <div class="message_current_user">
                <div class="name" alt="">
                  <img class="avatar-message" src="<%= room_message.user.avatar %>">
                  <%= user_name(room_message.user) %>
                </div>

                <div class="message-body">
                  <p class="mb-1">
                    <%= room_message.message.html_safe %>
                  </p>

                  <div class="text-right">
                    <small>
                      <%= room_message.created_at %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="message-content">
              <div class="message_user">
                <div class="name" alt="">
                  <img class="avatar-message" src="<%= room_message.user.avatar %>">
                  <%= user_name(room_message.user) %>
                </div>

                <div class="message-body">
                  <p class="mb-1">
                    <%= room_message.message.html_safe %>
                  </p>

                  <div class="text-right">
                    <small>
                      <%= room_message.created_at %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
    </div>
  </div>
</div>
